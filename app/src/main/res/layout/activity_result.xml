<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultActivity"
android:background="@drawable/ic_bg"
>

    <TextView android:layout_width="wrap_content" android:id="@+id/tvResult" android:layout_height="wrap_content"
              android:text="Result" android:textSize="32sp" app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginTop="64dp"
              android:fontFamily="sans-serif-condensed-medium"/>

    <ImageView android:layout_width="410dp" android:layout_height="300dp"
               android:src="@drawable/ic_trophy"
               android:id="@+id/trophy"
               app:layout_constraintStart_toStartOf="@id/tvResult"
               app:layout_constraintEnd_toEndOf="@id/tvResult"
               app:layout_constraintTop_toTopOf="parent"/>


    <TextView android:layout_width="wrap_content" android:id="@+id/tv1" android:layout_height="wrap_content"
              android:text="Hey, Congratulations!" android:textSize="32sp"
              app:layout_constraintTop_toBottomOf="@id/trophy"
              app:layout_constraintStart_toStartOf="@id/trophy" app:layout_constraintEnd_toEndOf="@id/trophy"
              android:layout_marginTop="16dp"
              android:fontFamily="sans-serif-condensed-medium"/>
    <TextView android:layout_width="wrap_content" android:id="@+id/tvName" android:layout_height="wrap_content"
              android:text="name" android:textSize="32sp" app:layout_constraintTop_toBottomOf="@id/tv1"
              app:layout_constraintStart_toStartOf="@id/tv1" app:layout_constraintEnd_toEndOf="@id/tv1"
              android:layout_marginTop="16dp"
              android:fontFamily="sans-serif-condensed-medium"/>
    <TextView android:layout_width="wrap_content" android:id="@+id/tvScore" android:layout_height="wrap_content"
              android:text="score" android:textSize="24sp" app:layout_constraintTop_toBottomOf="@id/tvName"
              app:layout_constraintStart_toStartOf="@id/tvName" app:layout_constraintEnd_toEndOf="@id/tvName"
              android:layout_marginTop="8dp"
              android:fontFamily="sans-serif-condensed-medium"
    />

    <Button android:layout_width="match_parent" android:layout_marginStart="32dp" android:layout_marginEnd="32dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tvScore" app:layout_constraintEnd_toEndOf="@id/tvScore"
            app:layout_constraintTop_toBottomOf="@id/tvScore" android:layout_marginTop="64dp" android:text="FINISH"
            android:id="@+id/btnFinish"
            android:textSize="20sp"
            android:background="@drawable/optionorder"
            android:fontFamily="sans-serif-condensed-medium"/>

</androidx.constraintlayout.widget.ConstraintLayout>